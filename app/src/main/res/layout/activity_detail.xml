<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


    <View
        android:id="@+id/cont_colored_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/div_center"
        tools:backgroundTint="@color/GREEN"
        />


    <TextView
        style="@style/Text.Primary"
        android:id="@+id/txt_date_and_time_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/div_center"
        tools:text="2:43AM 05/05/2018"/>


    <View
        android:id="@+id/div_center"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerVertical="true"
        />

    <TextView
        style="@style/Text.Secondary"
        android:id="@+id/txt_message_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/div_center"
        tools:text="Checkout content like Fragmented Podcast to expose yourself to the knowladge"

        />

</RelativeLayout>